// database
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// generator
generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
}


model Job{
  id String @id 
  cron String
  grace_time Int
  is_waiting Boolean
  is_running Boolean
  has_failed Boolean
  runsResults JobRun[]
  enabled Boolean
}

model JobRun{
  id Int @id @default(autoincrement())
  job Job @relation(fields: [job_id], references: [id])
  job_id String
  started_at DateTime
  finished_at DateTime
  is_success Boolean
  error String? // expired, failed
  command String
  output String?
  runtime Int
}
